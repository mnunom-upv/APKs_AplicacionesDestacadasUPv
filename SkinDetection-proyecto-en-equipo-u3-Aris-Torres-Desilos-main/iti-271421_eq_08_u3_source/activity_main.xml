<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <org.opencv.android.JavaCameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true" />

    <!-- Panel superior para controles -->
    <LinearLayout
        android:id="@+id/controls_panel"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#66000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <Switch
            android:id="@+id/switchFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtro piel" />

        <TextView
            android:id="@+id/txtLuz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Luz piel: 0" />

        <SeekBar
            android:id="@+id/seekLuz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:progress="100"/>

        <Button
            android:id="@+id/btnSwitchCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar cÃ¡mara"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnCapture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tomar foto"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</RelativeLayout>
